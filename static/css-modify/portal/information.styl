@import "./lib/header.styl"

section#index-view
    text-align:center
    font-size:base-font-size
    .avatar
        height:0.3rem
        background-color:#fff
        box-shadow:1px 1px 3px #ccc
        border-bottom:1px solid #dcdcdc
        span
            position:absolute
            height:0.3rem
            line-height:0.3rem
            left:0.04rem
        .avatar-detail
            position:absolute
            right:0.04rem
            width:0.28rem
            height:0.28rem
            margin-top:0.01rem
            background-size:cover
            background-position:center
            background-repeat:no-repeat
            border-radius:100%
    .num
        margin-top:margin-height
        background-color:#fff
        border-top:1px solid #dcdcdc
        border-bottom:1px solid #dcdcdc
        box-shadow:1px 1px 3px #ccc
