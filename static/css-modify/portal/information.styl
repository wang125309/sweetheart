        border-bottom:1px solid #dcdcdc
        box-shadow:1px 1px 3px #ccc
        .address
            .name
                float:left
            line-height:0.12rem
            margin-left:0.04rem
            margin-right:0.04rem
            border-bottom:1px solid #dcdcdc
            .input
                float:right
                width:70%
                input
                    border:none
