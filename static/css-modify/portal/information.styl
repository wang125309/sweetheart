            .name
                float:left
            line-height:0.12rem
            margin-left:0.04rem
            margin-right:0.04rem
            border-bottom:1px solid #dcdcdc
            .input
                width:70%
                float:right
                input
                    border:none
                    background-color:transparent
                    width:100%
                    text-align:right
        .qq
