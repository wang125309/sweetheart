    .binding-phone
        position:absolute
        width:100%
        height:100%
        background-color:rgba(0,0,0,0.4)
        top:0
        .bind
            width:0.8rem
            padding-top:margin-height
            padding-bottom:margin-height
            margin:0 auto
            text-align:center
            background-color:brand-black
            margin-top:0.5rem
            text-align:center
            .title
                font-size:base-font-size
                color:#fff
            .phone
                margin-top:margin-height-half
                input
                    padding:0.01rem
                    width:80%
                    background-color:transparent
                    border:1px solid #fff
                    border-radius:0.12rem
