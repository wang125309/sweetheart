@import "./lib/header.styl"

section#index-view
    text-align:left
    font-size:less-font-size
    .qrcode-back
        position:fixed
        background:rgba(0,0,0,0.7)
        top:0
        width:100%
        height:100%
        z-index:11000
        .qrcode
            position:absolute
            width:300px
            height:300px
            top:50%
            left:50%
            margin-left:-150px
            margin-top:-150px
    div.tabs
        height:0.15rem
        border-bottom:1px solid #dcdcdc
        .tab
            width:25%
            text-align:center
            display:inline-block
            height:0.15rem
            background-color:#fff
            line-height:0.15rem
            &.active
                color:brand-pink
        
    .card
        position:relative 
        padding:0.02rem
        margin:0 0.02rem
        margin-top:0.02rem
        position:relative
        border:1px solid #dcdcdc
        box-shadow:1px 1px 3px #ccc
        background:#fff
        .title
            color:brand-black
            border-bottom:1px solid #dcdcdc
            height:0.08rem
            line-height:0.08rem
            span.route
                position:absolute
                right:0.1rem
                .route-icon
                    image-wauto('route.png')
                    width:0.05rem
                    height:0.05rem
                    position:absolute
        .detail
            border-bottom:1px solid #dcdcdc
            .line
                color:#777
                height:0.08rem
                line-height:0.08rem
                .right
                    position:absolute
                    right:0.04rem
                    color:brand-pink
        .bottom
            height:0.08rem
            line-height:0.08rem
            .qrcode
                position:absolute
                right:0.04rem
                image-wauto('qrcode.png')
                width:0.06rem
                height:0.06rem
            button.pay
                position:absolute
                right:0
                margin-top:0.002rem
                background-color:rgb(255,190,0)
                border:none
                color:#fff
                margin-right:0.04rem
            button.paying
                position:absolute
                right:0.3rem
                margin-top:0.002rem
                background-color:rgb(255,190,0)
                border:none
                color:#fff
                margin-right:0.04rem
            button.cancelpay
                position:absolute
                right:0
                margin-top:0.002rem
                background-color:rgb(255,40,99)
                border:none
                color:#fff
                margin-right:0.04rem
            button.delete
                position:absolute
                right:0
                margin-top:0.002rem
                background-color:rgb(255,40,99)
                border:none
                color:#fff
                margin-right:0.04rem
            button.evaluate
                position:absolute
                right:0
                margin-top:0.002rem
                background-color:brand-pink
                border:none
                color:#fff
                margin-right:0.04rem
