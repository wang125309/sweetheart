@import "./lib/header.styl";

section#index-view
    section.banner
        background-color:#333
        padding-top:margin-height
        padding-bottom:margin-height
        width:100%
        div.avatar
            width:0.3rem
            height:0.3rem
            background-position:center center
            background-size:auto 100%
            background-repeat:no-repeat
            border-radius:100%
            margin:0 auto
        div.name
            text-align:center
            margin-top:margin-height
            color:#fff
            font-size:base-font-size
            span.sex-f
                width:0.05rem
                height:0.05rem
                position:absolute
                image-hauto('famale.png')
            span.sex-m
                width:0.05rem
                height:0.05rem
                position:absolute
                image-hauto('male.png')
        div.button-line
            font-size:base-font-size
            margin-top:margin-height
            text-align:center
            white-space:nowrap
            button#order-button
                height:0.1rem
                text-align:left
                margin-right:0.015rem
                background-color:transparent
                padding-left:0.08rem
                padding-right:0.08rem
                border:1px solid brand-pink
                color:brand-pink
                border-radius:0.1rem
                i#order-button-icon
                    image-wauto('order-icon.png')
                    width:0.05rem
                    height:0.06rem
                    margin-left:-0.06rem
                    position:absolute
                span
                    font-size:base-font-size
                    margin-left:0.02rem
                i#new
                    width:0.01rem
                    height:0.01rem
                    position:absolute
                    image-wauto('new-icon.png')
                i.go-right
                    height:0.06rem
                    margin-left:0.02rem
                    width:0.05rem
                    position:absolute
                    image-hauto('go-right-pink.png')
            button#shop
                height:0.1rem
                text-align:left
                margin-left:0.015rem
                background-color:transparent
                padding-left:0.08rem
                padding-right:0.08rem
                border:1px solid brand-pink
                color:brand-pink
                border-radius:0.1rem
                i#shop-button-icon
                    image-wauto('shop-icon.png')
                    width:0.05rem
                    height:0.06rem
                    position:absolute
                    margin-left:-0.07rem
                span
                    font-size:base-font-size
                    margin-left:0.015rem
                i.go-right
                    height:0.06rem
                    width:0.05rem
                    margin-left:0.015rem
                    position:absolute
                    image-hauto('go-right-pink.png')
    section.blank
        margin-top:margin-height
        div.opt
            margin-bottom:margin-height-half
            padding-left:margin-height-half
            padding-right:margin-height-half
            background:#fff
            box-shadow:1px 1px 5px #ccc
            line-height:0.12rem
            height:0.12rem
            font-size:base-font-size
            span
                font-size:base-font-size
            span#focus-num
                position:absolute
                right:0.08rem
                font-size:base-font-size
            i.go-right
                height:0.12rem
                width:0.03rem
                image-wauto('go-right-black.png')
                position:absolute
                right:margin-height-half
