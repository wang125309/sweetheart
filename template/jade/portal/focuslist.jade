include ./lib/header.jade
    title 我的关注 
    link(href="/static/css/portal/focuslist.css",rel="stylesheet",type="text/css")
    script(language="javascript",src="/static/js/portal/focuslist.js")
body(ng-controller="focuslistCtrl")
    section#index-view
        div.coach-list(ng-show="type=='1'")
            div.line(ng-repeat="i in coachlist")
                div.avatar-area
                    div.avatar(style="background-image:url('{{ i.stUserEntity.headurl }}')")
                div.message-area
                    div.line-first
                        span.name {{ i.stUserEntity.nickname }}
                        span.sex-f(ng-if="i.stUserEntity.gender == '1'")=""
                        span.sex-m(ng-if="i.stUserEntity.gender == '2'")=""
                    div.line-second
                        span.location-icon=""
                        span.address=""
                div.go-right=""
        div.coach-list(ng-show="type=='2'")
            div.line(ng-repeat="i in coachlist",ng-click="goCoach(i.coach_id,i.stCoachEntity.userid)")
                div.avatar-area
                    div.avatar(style="background-image:url('{{ i.stCoachEntity.headimg }}')")
                div.message-area
                    div.line-first
                        span.name {{ i.stCoachEntity.displayname }}
                        span.sex-f(ng-if="i.stCoachEntity.gender == '1'")=""
                        span.sex-m(ng-if="i.stCoachEntity.gender == '2'")=""
                        span.skill-area
                            span.skill(ng-repeat="j in i.stCoachEntity.goodats") {{ j.display }}
                    div.line-second
                        span.location-icon=""
                        span.address=""
                div.go-right=""
