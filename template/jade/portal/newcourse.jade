include ./lib/header.jade
    title 新增课程
    link(href="/static/css/portal/newcourse.css",rel="stylesheet",type="text/css")
    script(language="javascript",src="/static/js/portal/newcourse.js")
body(ng-controller="newcourseCtrl")
    section#index-view
        include ./lib/alert.jade
        div.card.clearfix(move)
            div.time-chooser.move.cleafix
                div.name.clearfix 课程时间
                div.right
                    div.timer.clearfix
                        div#shour.hour.swiper-container.clearfix
                            div.swiper-wrapper
                                -   for (var hour = 0; hour <= 24; hour ++)
                                        div(class="hour"+hour).swiper-slide=hour<10?'0'+hour:hour
                        div.pipe.clearfix :
                        div#sminute.minute.swiper-container.clearfix
                            div.swiper-wrapper
                                -   for (var minute = 0; minute < 60 ; minute ++)
                                        div(class="minus"+minute).swiper-slide=minute<10?'0'+minute:minute
                    div.to -
                    div.timer.clearfix
                        div#thour.hour.swiper-container.clearfix
                            div.swiper-wrapper
                                -   for (var hour = 0; hour <= 24; hour ++)
                                        div(class="hour"+hour).swiper-slide=hour<10?'0'+hour:hour
                        div.pipe.clearfix :
                        div#tminute.minute.swiper-container.clearfix
                            div.swiper-wrapper
                                -   for (var minute = 0; minute < 60 ; minute ++)
                                        div(class="minus"+minute).swiper-slide=minute<10?'0'+minute:minute
                            input(type="hidden",ng-model="course.begintime")
                            input(type="hidden",ng-model="course.endtime")
            div.price.clearfix
                div.name 课程价格
                div.right
                    input(type="number",ng-model="course.cost")
                    span 甜心币/课时
            div.address.location.clearfix
                div.name 课程地址
                div.right(ng-click="showLocationChooser()") {{ location }}
            div.address.clearfix
                div.name 课程描述
                div.right
                    textarea(ng-model="course.desc")=""
        div.place-chooser-background(ng-click="hideLocationChooser()",ng-show="showLocation == true")
            div.place-chooser
                div.place(class="{{ i.active }}",ng-repeat="i in locations",ng-click="chooseLocation($index)") {{ i.place_name }}
        button#add(type="button",ng-click="newCourse()") + 新增
                    
